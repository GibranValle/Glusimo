
<resources>     <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- ESTILO DE CONSOLA DE BLUETOOTH -->
    <style name="consola">
        <item name="android:textColor">@color/colorLetraClara</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- ESTILO DE SPINNER -->
    <style name="spinner">
        <item name="android:textColor">@color/colorLetraClara</item>
        <item name="android:textSize">7pt</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- ESTILO DE ELEMENTO DE SPINNER -->
    <style name="spinner_element">
        <item name="android:textColor">@color/colorLetraClara</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">start|center</item>
    </style>

    <!-- ESTILO DE LISTVIEW -->
    <style name="listview">
        <item name="android:textColor">@color/colorLetraClara</item>
        <item name="android:textSize">12pt</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">start|center</item>
    </style>

    <style name="lista_config">
        <item name="android:textColor">@color/colorLetraClara</item>
        <item name="android:textSize">11pt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start|center</item>
    </style>

    <style name="titulo_lista">
        <item name="android:textColor">@color/colorLetraClara</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start|center</item>
    </style>

    <style name="elemento_lista">
        <item name="android:textColor">@color/colorLetraClara</item>
        <item name="android:textSize">8pt</item>
        <item name="android:gravity">start|center</item>
    </style>

    <!--Tipos de letras -->

    <style name="tituloFragment">
        <item name="android:textColor">@color/colorLetraClara</item>
        <item name="android:textSize">10pt</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textoFragment">
        <item name="android:textColor">@color/colorLetraClara</item>
        <item name="android:textSize">9pt</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textoBoton">
        <item name="android:textColor">@color/colorLetraClara</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textSize">8pt</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">true</item>
    </style>

</resources>
